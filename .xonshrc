import time
import os


def show_custom_help():
    snippets = [
        ('environment variables', '$HOME, $PATH'),
        ('Unset environment variable', 'del $GOAL'),
        ('Complete environment', '${...}'),
        ('Check if environment variable exists', '\'HOME\' in ${...}'),
        ('Get help about a specific environment variable', '${...}.help(\'HOME\')'),
        ('Temporarily set environment variable', 'with ${...}.swap(SOMEVAR=\'foo\'): ...'),
        ('Construct environment name programatically', '${python expression}'),
        ('Execute and capture subprocess, output as string', 'output = $(command here) or !(...)'),
        ('Uncaptured subprocess, output to screen', 'output = $[command here] or ![...]'),
        ('Getting return code of processs', 'Use ![] !() instead of $[] $()')
    ]

    prompt_len = max(len(line[0]) for line in snippets)
    print()
    for prompt, code in snippets:
        print(f'{" " * (prompt_len - len(prompt))} {prompt}     {code}\n')


def dark_theme():
    $[gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita-dark']

def append_to_path(dir):
    dir = dir.strip()
    if dir not in $PATH:
        $PATH.append(dir)

def fix_keyboard():
    $[setxkbmap -option]  # clear previous mappings
    print('Mapping Caps Lock to BackSpace')
    $[setxkbmap -option caps:backspace]
    $[setxkbmap -option shift:both_capslock]
    $[xmodmap -e "clear Lock"]
    $[xset r rate 220 40]  # repeat keys delay and rate

def adjust_brightness():
    monitors = [line.strip() for line in $(xrandr --listmonitors).split('\n') if line.strip()][1:]
    if len(monitors) != 2:
        $(notify-send -t 5000 -i face-surprise-symbolic f'{len(monitors)} monitor(s) detected!' @('\r'.join(monitors)))
        print(f'{len(monitors)} monitor(s) detected!\n' + '\n'.join(monitors))
        return
    primary, secondary = monitors
    if 'x2160' in secondary:
        primary, secondary = secondary, primary
    monitors = primary, secondary
    monitors = [line.split()[-1] for line in monitors]
    primary, secondary = monitors
    with open('/sys/class/backlight/intel_backlight/max_brightness', 'r') as f:
        max_brightness = int(f.read())
    start_time = time.time()
    initial_value = None
    $(notify-send -t 5000 'Adjusting brightness')
    while time.time() - start_time < 10:
        with open('/sys/class/backlight/intel_backlight/brightness', 'r') as f:
            brightness = int(f.read())
        if brightness != initial_value:
            start_time = time.time()
            initial_value = brightness
        primary_value = 1.5 * (brightness - 240)/max_brightness
        secondary_value = 3.5 * primary_value
        $[xrandr --output @(primary) --brightness @(primary_value)]
        $[xrandr --output @(secondary) --brightness @(secondary_value)]
        time.sleep(0.1)


fix_keyboard()
